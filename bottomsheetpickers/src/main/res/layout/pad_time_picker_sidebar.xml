<com.philliphsu.bottomsheetpickers.time.TimePickerPadLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pad_operator"
    style="@style/PadLayoutStyle.Operator"
    android:background="@color/pad_operator_background_color"
    android:columnCount="1"
    android:rowCount="4">

    <!--TODO: ToggleButton-->
    <Button
        android:id="@+id/half_day_1"
        style="@style/PadButtonStyle.Operator.Text"
        android:contentDescription="@string/desc_half_day_1"
        android:onClick="onButtonClick"
        android:text="AM" />

    <!--TODO: ToggleButton-->
    <Button
        android:id="@+id/half_day_2"
        style="@style/PadButtonStyle.Operator.Text"
        android:contentDescription="@string/desc_half_day_2"
        android:onClick="onButtonClick"
        android:text="PM" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/desc_done"
            android:onClick="onButtonClick" />

    </FrameLayout>

</com.philliphsu.bottomsheetpickers.time.TimePickerPadLayout>